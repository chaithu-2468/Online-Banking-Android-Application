<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".billdetails"
    android:background="@drawable/gradient_new">

    <ImageView
        android:id="@+id/imageViewbilldetail"
        android:layout_width="409dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.171"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008"
        app:srcCompat="@drawable/sbiregisterimages" />

    <TextView
        android:id="@+id/billdetail"
        android:layout_width="263dp"
        android:layout_height="62dp"
        android:layout_below="@id/imageViewbilldetail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Default text"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewbilldetail" />

    <ListView
        android:id="@+id/listofbills"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_margin="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billdetail" />

    <TextView
        android:id="@+id/backtext"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_below="@id/listofbills"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@color/primary_blue"
        android:drawableStart="@drawable/back_35"
        android:text="back"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listofbills" />

</androidx.constraintlayout.widget.ConstraintLayout>